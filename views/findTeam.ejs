<%- include("templates/header") %>
<main class="form-signin w-100 m-auto">
  <div class="text-center">
  <form action="/joinTeam" method="post" required>
    
    <h1 class="h3 mb-3 fw-normal">Join a team room</h1>

    <div class="form-floating">
      <input
        name="teamCode"
        type="text"
        class="form-control"
        id="floatingInput"
        placeholder="Enter team code"
        required
      />
      <label for="floatingInput">Enter team room code</label>
    </div>
    <br>
    <button class="btn btn-primary btn-lg px-4 me-sm-3" type="submit">Join</button>
    
  </form>
</div>
</div>
</main>
  <%- include("templates/footer") %>